        <Label Content="Kontakt" HorizontalAlignment="Left" Margin="50,180,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtIme" HorizontalAlignment="Left" Height="23" Margin="145,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
