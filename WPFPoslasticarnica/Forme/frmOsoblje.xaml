        <TextBox Name="txtntakt" HorizontalAlignment="Left" Height="23" Margin="145,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnSacuvaj" Content="Sacuvaj" HorizontalAlignment="Left" Margin="50,230,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnOtkazi" Content="Otkazi" HorizontalAlignment="Left" Margin="180,230,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
